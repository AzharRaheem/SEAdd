@model List<SEAdd.Models.ViewModels.RejectionMessageVM>

@{
    ViewBag.Title = "ViewAllMessages";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="text-center">
    <h2 class="text-primary"><strong>Messages</strong></h2>
    <hr class="col-md-2 mx-auto" />
</div>
<div class="container">
    @foreach (var item in Model)
    {
         <div class="card bg-primary text-white">
            <div class="card-header">
                <h5 class="card-title text-white"><strong>@item.rejectionMessage.title</strong></h5>
            </div>
            <div class="card-body mb-0">
                <p class="card-text">@item.rejectionMessage.message .</p>
            </div>
             <hr class="col-md-12 mx-auto" />
            <div class="row">
                <div class="col-sm-3 col-md-3">
                    <div class="card-footer bg-transparent border-0">
                        Date :@item.rejectionMessage.date.ToString("dd-MM-yyyy")
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                    <div class="card-footer bg-transparent border-0">
                        Department :@item.departmentName
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                    <div class="card-footer bg-transparent border-0">
                        Program :@item.programName
                    </div>
                </div>
                <div class="col-sm-3 col-md-3">
                    <div class="card-footer bg-transparent border-0">
                        From :Administration
                    </div>
                </div>
            </div>
        </div>
    }
</div>
