@model SEAdd.Models.ViewModels.UserRoleVM
@{
    ViewBag.Title = "AddNewUser";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">User</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
    </ol>
</div>
@using (Html.BeginForm("AddNewUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>Add User</h3>
                @Html.ValidationSummary(true , "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
            </div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.FirstName)
                    @Html.TextBoxFor(m => m.newUser.FirstName, new { @class = "form-control", placeholder = "Enter First Name" })
                    @Html.ValidationMessageFor(m => m.newUser.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.LastName)
                    @Html.TextBoxFor(m => m.newUser.LastName , new { @class = "form-control", placeholder = "Enter Last Name" })
                    @Html.ValidationMessageFor(m => m.newUser.LastName , "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.fatherName)
                    @Html.TextBoxFor(m => m.newUser.fatherName, new { @class = "form-control", placeholder = "Enter Father Name" })
                    @Html.ValidationMessageFor(m => m.newUser.fatherName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.Cnic)
                    @Html.TextBoxFor(m => m.newUser.Cnic, new { @class = "form-control", placeholder = "xxxxx-xxxxxxx-x" })
                    @Html.ValidationMessageFor(m => m.newUser.Cnic, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.Email)
                    @Html.TextBoxFor(m => m.newUser.Email, new { @class = "form-control", placeholder = "Enter Your Email" })
                    @Html.ValidationMessageFor(m => m.newUser.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.PhoneNumber)
                    @Html.TextBoxFor(m => m.newUser.PhoneNumber, new { @class = "form-control", placeholder = "Enter Mobile Number" })
                    @Html.ValidationMessageFor(m => m.newUser.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.Password)
                    @Html.TextBoxFor(m => m.newUser.Password, new { @class = "form-control", placeholder = "Enter Your Password" , type="password"})
                    @Html.ValidationMessageFor(m => m.newUser.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.ConfirmPassword)
                    @Html.TextBoxFor(m => m.newUser.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Confirmed Password" , type = "password" })
                    @Html.ValidationMessageFor(m => m.newUser.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.gender)
                    @Html.DropDownListFor(m => m.newUser.gender, new SelectList(Model.Gender) , "-Select Gender-" , new { @class = "default-select wide form-control" })
                    @Html.ValidationMessageFor(m => m.newUser.gender, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.role)
                    @Html.DropDownListFor(m => m.newUser.role, new SelectList(Model.roles , "Name" , "Name"), "-Select Role-", new { @class = "default-select wide form-control" })
                    @Html.ValidationMessageFor(m => m.newUser.role, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.newUser.Address)
                    @Html.TextAreaFor(m => m.newUser.Address, new { @class = "form-control", placeholder = "Enter Your Address" })
                    @Html.ValidationMessageFor(m => m.newUser.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                   @Html.Label("Profile Image")
                   @Html.TextBox("file", "", new { @class = "form-control pt-3", type = "file", accept = ".jpeg , .jpg , .png" })
                </div>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="float-end">
                        <a href="~/Dashboard/AdminDashboard" class="btn btn-sm btn-success">CANCEL</a>
                        <input type="submit" value="SAVE" name="save" class="btn btn-sm btn-primary" />
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
}
