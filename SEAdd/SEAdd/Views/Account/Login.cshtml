@using SEAdd.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Login";
}
@section styles{
    <link rel="stylesheet" href="~/Content/login.css" />
}

 @using (Html.BeginForm("Login", "Account", FormMethod.Post))
 {
    @Html.AntiForgeryToken()
    <div class="form-box">
        <div class="header-text">
            Login
        </div>
        @Html.ValidationSummary(true , "" , new { @class="text-danger"})
        @Html.TextBoxFor(m => m.Email , new { placeholder="Your Email Address"})
        @Html.ValidationMessageFor(m => m.Email , "" , new { @class = "text-danger" })
        @Html.PasswordFor(m => m.Password, new { placeholder = "Your Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <br />
        @Html.CheckBoxFor(m => m.RememberMe) Remember Me?
        <button type="submit">Login</button>
        <div class="text-center">Don't have an account? <a href="/Account/Register" id="RegistrationLink">Register</a></div>
    </div>
 }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}