@model List<SEAdd.Models.DomainModels.Notification>
<div class="col-md=12 mt-4 mx-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">All Notifications</h4>
            @if (User.IsInRole("Admin"))
            {
                <a href="~/Notification/AddNotification" class="btn btn-sm btn-primary float-end"><i class="fa fa-plus"></i> Add Notification</a>
            }
        </div>
        <div class="clearfix"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example5" class="display dataTable table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Dated</th>
                            <th>Title</th>
                            <th>Notification</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/assets/images/newNotification.gif" alt="New Notification" title="Notification"></td>
                                <td>@item.NotificationDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.NotificationTitle</td>
                                <td>
                                    <a href="@Url.Content(item.NotificationFileUrl)" target="_blank" style="color:blue;">Download/View</a>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        @Html.ActionLink("Edit", "EditNotification", new { id = @item.Id }, new { @class = "btn btn-sm btn-success" })
                                        <!-- Modal Start -->
                                        <div class="modal fade" id="deleteModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h3 class="modal-title" id="exampleModalLabel">Confirm</h3>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>Are you sure you want to delete this item?</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success" data-bs-dismiss="modal" id="closeBtn">CLOSE</button>
                                                        <a id="deleteBtn" class="btn btn-danger">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Modal End -->
                                        <a class="btn btn-sm btn-danger deleteLink" data-bs-toggle="modal" data-bs-target="#deleteModel" IdValue=@item.Id>Delete</a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
