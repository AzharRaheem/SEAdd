@model List<SEAdd.Models.UserProfileVM>
<div class="col-md=12 mt-4 mx-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Users</h4>
            <a href="~/Account/AddNewUser" class="btn btn-sm btn-primary"><i class="fa fa-user-plus" style="font-size:18px;"></i> Add New</a>
        </div>
        <div class="clearfix"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example5" class="display dataTable table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Father's Name</th>
                            <th>CNIC</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Gender</th>
                            <th>Role</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.profileImgUrl != null)
                                    {
                                        <img src="@Url.Content(item.profileImgUrl)" class="img-thumbnail" width="100" height="100" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/userProfileAvatar.png" class="img-thumbnail" width="100" height="100" />
                                    }
                                </td>
                                <td>@item.firstName</td>
                                <td>@item.lastName</td>
                                <td>@item.fatherName</td>
                                <td>@item.cnic</td>
                                <td>@item.email</td>
                                <td>@item.phoneNumber</td>
                                @if (item.gender != null)
                                {
                                    if (item.gender == "True")
                                    {
                                        <td>Male</td>
                                    }
                                    else
                                    {
                                        <td>Female</td>
                                    }
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td>
                                    @item.role
                                </td>
                                <td>@item.address</td>
                                <td>
                                    @*@Html.ActionLink("View", "View", new { id = @item.id }, new { @class = "btn btn-sm btn-primary" })*@
                                    @*@Html.ActionLink("Edit", "EditUser", new { id = @item.id }, new { @class = "btn btn-sm btn-success col-md-12 col-sm-12 mb-1" })*@
                                    <!-- Modal Start -->
                                    <div class="modal fade" id="deleteModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h3 class="modal-title" id="exampleModalLabel">Confirm</h3>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h4>Are you sure you want to delete this item?</h4>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-success" data-bs-dismiss="modal" id="closeBtn">Close</button>
                                                    <a id="deleteBtn" class="btn btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Modal End -->
                                    @if (item.id != Convert.ToString(Session["UserId"]))
                                    {
                                        <a class="btn btn-sm btn-danger deleteLink" data-bs-toggle="modal" data-bs-target="#deleteModel" IdValue=@item.id.ToString()>Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
