@model SEAdd.Models.DomainModels.TransportRoute

@{
    ViewBag.Title = "EditRoute";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Routes</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
    </ol>
</div>

@using (Html.BeginForm("EditRoute", "TransportRoute", FormMethod.Post))
{
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>Update Route</h3>
            </div>
            <div class="col-sm-6">
                <span><a href="~/TransportRoute/Index" class="btn btn-sm btn-primary float-end"><i class="fa fa-angle-double-left"></i> Back to List</a></span>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.route)
                    @Html.TextBoxFor(m => m.route, new { @class = "form-control", placeholder = "Enter Route (pick to drop)" })
                    @Html.ValidationMessageFor(m => m.route, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">

                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 ">
                <div class="form-group float-end">
                    <input type="submit" value="UPDATE" name="update" class="btn btn-sm btn-success" />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
}




