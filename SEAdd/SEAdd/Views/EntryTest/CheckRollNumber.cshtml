@model SEAdd.Models.ViewModels.RollNumberDepartmentVM
@{
    ViewBag.Title = "CheckRollNumber";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@using (Html.BeginForm("CheckRollNumber", "EntryTest", FormMethod.Post))
{
    <div class="container p-4">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container text-center">
                <div class="alert alert-danger alert-dismissible fade show">
                    <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="me-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close"></button>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-sm-6">
                <h3>Participate in the Test</h3>
            </div>
            <div class="col-sm-6">
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.department)
                    @Html.DropDownListFor(m => m.department, new SelectList(Model.departments, "name", "name"), "-Select Department-", new { @class = "default-select wide form-control" })
                    @Html.ValidationMessageFor(m => m.department, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.rollNumber)
                    @Html.TextBoxFor(m => m.rollNumber, new { @class = "form-control", placeholder = "Enter RollNumber" })
                    @Html.ValidationMessageFor(m => m.rollNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mt-2 float-end">
            <div class="form-group">
                <input type="submit" value="CHECK FOR TEST" name="save" class="btn btn-sm btn-success" />
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}

