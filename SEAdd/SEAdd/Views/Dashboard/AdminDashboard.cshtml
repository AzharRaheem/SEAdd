                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card py-3">
                                        @if (User.IsInRole("SuperAdmin"))
                                        {
                                            <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                                <div class="col-md-9 col-sm-9">
                                                    <h4 class="fs-18 font-w600 mb-4 text-nowrap">Hostels</h4>
                                                    <hr class="col-md-4" />
                                                    <div class="d-flex align-items-center">
                                                        <h2 class="fs-32 font-w700 mb-4">@Model.hostelCount </h2>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 col-sm-3">
                                                    <img src="~/assets/images/hostel.png" width="80" height="80">
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                                <div class="col-md-9 col-sm-9">
                                                    <h4 class="fs-18 font-w600 mb-4 text-nowrap">Rejected Applicants - (@Model.rejectedApplicantsCount)</h4>
                                                    <hr class="col-md-4" />
                                                    <div class="d-flex align-items-center">
                                                        @if (Model.rejectedApplicantsCount != 0)
                                                        {
                                                            <div class="btn-group" role="group">
                                                                <button type="button" class="btn btn-primary btn-rounded dropdown-toggle show" data-bs-toggle="dropdown" aria-expanded="true">
                                                                    <span class="btn-icon-start text-primary">
                                                                        <i class="fa fa-download color-primary"></i>
                                                                    </span>Download
                                                                </button>
                                                                <div class="dropdown-menu" style="margin: 0px;">
                                                                    @foreach (var item in Model.Programs)
                                                                    {
                                                                        <a href="~/Applicant/PrintAllRejectedDepartmentalApplicants/@item.id" class="dropdown-item">
                                                                            @item.ProgramName
                                                                        </a>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <a href="#" onclick="AppplicantsCountZero()" class="btn btn-rounded btn-primary">
                                                                <span class="btn-icon-start text-primary">
                                                                    <i class="fa fa-download"></i>
                                                                </span>Download
                                                            </a>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-md-3 col-sm-3">
                                                    <img src="~/assets/images/rejected.png" width="80" height="80">
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card py-3">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
