@model SEAdd.Models.ViewModels.AdminDashboardVM
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Total Applications</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">@Model.applicationsCount</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/application.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Total Users</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">@Model.usersCount</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/man.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Total Departments</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">@Model.departmentCount</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/firefighter.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-xl-3 col-xxl-6 col-lg-6 col-sm-6">
                                    <div class="widget-stat card bg-primary">
                                        <div class="card-body  p-4">
                                            <div class="media">
                                                <span class="me-3">
                                                    <i class="fa fa-users"></i>
                                                </span>
                                                <div class="media-body text-white">
                                                    <p class="mb-1">Approved Applications</p>
                                                    <h3 class="text-white">@Model.approvedApplicationsCount</h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-xxl-6 col-lg-6 col-sm-6">
                                    <div class="widget-stat card bg-warning">
                                        <div class="card-body p-4">
                                            <div class="media">
                                                <span class="me-3">
                                                    <i class="fa fa-bell"></i>
                                                </span>
                                                <div class="media-body text-white">
                                                    <p class="mb-1">Notifications</p>
                                                    <h3 class="text-white">@Model.notificationsCount</h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-xxl-12 col-lg-12 col-sm-12">
                                    @Html.Partial("_AllApplicants" , Model.Applicants)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        function AlreadyApproved() {
            swal({
                title: "Approved!",
                text: "This application is already approved.",
                icon: "success",
                button: "OK",
            });
        }
        function ReviewApplication() {
            swal({
                title: "Sorry!",
                text: "Kindly review the application first.",
                icon: "warning",
                button: "OK",
            });
        }
        $('#example5').DataTable(
       {
           searching: true,
           paging: true,
           select: true,
           info: true,
           lengthChange: true,
           language: {
               paginate: {
                   next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
                   previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
               }
           }
       });
    </script>
}