                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Notifications - (@Model.notificationsCount)</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <a href="~/Notification/Index" class="btn btn-rounded btn-info">
                                                        <span class="btn-icon-start text-info">
                                                            <i class="fa fa-bell"></i>
                                                        </span>View All
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/notification-bell.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-xxl-12 col-lg-12 col-sm-12">
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        @Html.Partial("_AllApplicants", Model.Applicants)
                                    }
                                    else
                                    {
                                        @Html.Partial("_AllApplicantsDepartmental", Model.departmentalApplicants)
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        function AlreadyApproved() {
            swal({
                title: "Approved!",
                text: "This application is already approved.",
                icon: "success",
                button: "OK",
            });
        }
        function ReviewApplication() {
            swal({
                title: "Sorry!",
                text: "Kindly review the application first.",
                icon: "warning",
                button: "OK",
            });
        }
        function AppplicantsCountZero()
        {
            swal({
                title: "Sorry!",
                text: "Applicant count is zero.",
                icon: "error",
                button: "OK",
            });
        }
        $('#example5').DataTable(
       {
           searching: true,
           paging: true,
           select: true,
           info: true,
           lengthChange: true,
           language: {
               paginate: {
                   next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
                   previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
               }
           }
       });
        $(".deleteLink").click(function () {
            var id = $(this).attr("IdValue");
            $("#deleteBtn").attr("href", "/Student/DeleteApplicant/" + id);
        });
    </script>
}