@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="row">
                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row">
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">New Applications</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">0</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/application.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Total Users</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">0</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/man.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Total Departments</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <h2 class="fs-32 font-w700 mb-4">0</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/firefighter.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card py-3">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Approved Applicants - (0)</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    @if (true)
                                                    {
                                                        <a href="~/Student/PrintApprovedApplicants" class="btn btn-rounded btn-success">
                                                            <span class="btn-icon-start text-success">
                                                                <i class="fa fa-download"></i>
                                                            </span>Download
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="#" onclick="AppplicantsCountZero()" class="btn btn-rounded btn-success">
                                                            <span class="btn-icon-start text-success">
                                                                <i class="fa fa-download"></i>
                                                            </span>Download
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/approved.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card py-3">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Rejected Applicants - (0)</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    @if(true)
                                                    { 
                                                        <a href="~/Student/PrintRejectedApplicants" class="btn btn-rounded btn-primary">
                                                            <span class="btn-icon-start text-primary">
                                                                <i class="fa fa-download"></i>
                                                            </span>Download
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="#" onclick="AppplicantsCountZero()" class="btn btn-rounded btn-primary">
                                                            <span class="btn-icon-start text-primary">
                                                                <i class="fa fa-download"></i>
                                                            </span>Download
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/rejected.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-sm-4">
                                    <div class="card py-3">
                                        <div class="card-body d-flex px-4 pb-0 justify-content-between">
                                            <div class="col-md-9 col-sm-9">
                                                <h4 class="fs-18 font-w600 mb-4 text-nowrap">Notifications - (0)</h4>
                                                <hr class="col-md-4" />
                                                <div class="d-flex align-items-center">
                                                    <a href="~/Notification/Index" class="btn btn-rounded btn-info">
                                                        <span class="btn-icon-start text-info">
                                                            <i class="fa fa-bell"></i>
                                                        </span>View All
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-md-3 col-sm-3">
                                                <img src="~/assets/images/notification-bell.png" width="80" height="80">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-xxl-12 col-lg-12 col-sm-12">
                                    @*Render Patial view of the Applicants*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        function AlreadyApproved() {
            swal({
                title: "Approved!",
                text: "This application is already approved.",
                icon: "success",
                button: "OK",
            });
        }
        function ReviewApplication() {
            swal({
                title: "Sorry!",
                text: "Kindly review the application first.",
                icon: "warning",
                button: "OK",
            });
        }
        function AppplicantsCountZero()
        {
            swal({
                title: "Sorry!",
                text: "Applicant count is zero.",
                icon: "error",
                button: "OK",
            });
        }
        $('#example5').DataTable(
       {
           searching: true,
           paging: true,
           select: true,
           info: true,
           lengthChange: true,
           language: {
               paginate: {
                   next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
                   previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
               }
           }
       });
        $(".deleteLink").click(function () {
            var id = $(this).attr("IdValue");
            $("#deleteBtn").attr("href", "/Student/DeleteApplicant/" + id);
        });
    </script>
}