@model SEAdd.Models.ViewModels.HostelCampusVM

@{
    ViewBag.Title = "EditHostel";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Hostels</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
    </ol>
</div>

@using (Html.BeginForm("EditHostel", "Hostel", FormMethod.Post))
{
    @Html.HiddenFor(m => m.hostel.id)
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>Update Hostel</h3>
            </div>
            <div class="col-sm-6">
                <span><a href="~/Hostel/Index" class="btn btn-sm btn-primary float-end"><i class="fa fa-angle-double-left"></i> Back to List</a></span>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.hostel.Name)
                    @Html.TextBoxFor(m => m.hostel.Name, new { @class = "form-control", placeholder = "Enter Hostel Name" })
                    @Html.ValidationMessageFor(m => m.hostel.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.hostel.CampusId)
                    @Html.DropDownListFor(m => m.hostel.CampusId, new SelectList(Model.Campuses, "id", "name"), "-Select Campus-", new { @class = "default-select wide form-control" })
                    @Html.ValidationMessageFor(m => m.hostel.CampusId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 ">
                <div class="form-group float-end">
                    <input type="submit" value="UPDATE" name="update" class="btn btn-sm btn-success" />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
}



