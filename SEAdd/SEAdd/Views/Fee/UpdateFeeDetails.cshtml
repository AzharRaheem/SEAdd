@model SEAdd.Models.ViewModels.BankFeeVM
@{
    ViewBag.Title = "Edit Fee";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Fee</a></li>
        <li class="breadcrumb-item"><a href="javascript:void(0)">@ViewBag.Title</a></li>
    </ol>
</div>
@using (Html.BeginForm("UpdateFeeDetails", "Fee", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.FeeDetails.id)
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>Manage Fee</h3>
            </div>
            <div class="col-sm-6">
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FeeDetails.formFee)
                    @Html.TextBoxFor(m => m.FeeDetails.formFee, new { @class = "form-control", placeholder = "000", type = "number" })
                    @Html.ValidationMessageFor(m => m.FeeDetails.formFee, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FeeDetails.entryTestFee)
                    @Html.TextBoxFor(m => m.FeeDetails.entryTestFee, new { @class = "form-control", placeholder = "000", type = "number" })
                    @Html.ValidationMessageFor(m => m.FeeDetails.entryTestFee, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FeeDetails.bankId)
                    @Html.DropDownListFor(m => m.FeeDetails.bankId, new SelectList(Model.banks, "id", "name"), "-Select Bank-", new { @class = "default-select wide form-control" })
                    @Html.ValidationMessageFor(m => m.FeeDetails.bankId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group ">
                    @Html.LabelFor(m => m.FeeDetails.additionalFormFee)
                    @Html.TextBoxFor(m => m.FeeDetails.additionalFormFee, new { @class = "form-control", placeholder = "000", type = "number" })
                    @Html.ValidationMessageFor(m => m.FeeDetails.additionalFormFee, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="float-end">
                <input type="submit" value="UPDATE" name="saveBtn" class="btn btn-sm btn-success mt-md-4" />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}

