@model List<SEAdd.Models.DomainModels.Fee>
@{
    ViewBag.Title = "Fee";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Fee</a></li>
    </ol>
</div>
<div class="col-md=12 mt-4 mx-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Fee</h4>
            @if (ViewBag.FeeCount == 0)
            {
                <a href="~/Fee/AddFee" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Add New</a>
            }
        </div>
        <div class="clearfix"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example5" class="display dataTable table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Main Form Fee</th>
                            <th>Entry Test Fee</th>
                            <th>Additional Form Fee</th>
                            <th>Bank</th>
                            <th>Account No.</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.formFee</td>
                                    <td>@item.entryTestFee</td>
                                    <td>@item.additionalFormFee</td>
                                    <td>@item.Bank.name</td>
                                    <td>@item.Bank.accountNo</td>
                                    <td>
                                        @Html.ActionLink("Edit", "UpdateFeeDetails", new { id = @item.id }, new { @class = "btn btn-sm btn-success" })
                                        <div class="modal fade" id="deleteModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h3 class="modal-title" id="exampleModalLabel">Confirm</h3>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>Are you sure you want to delete this item?</h4>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success" data-bs-dismiss="modal" id="closeBtn">Close</button>
                                                        <a id="deleteBtn" class="btn btn-danger">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Modal End -->
                                        <a class="btn btn-sm btn-danger deleteLink" data-bs-toggle="modal" data-bs-target="#deleteModel" IdValue=@item.id>Delete</a>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#example5').DataTable(
	    {
	        searching: true,
	        paging: true,
	        select: true,
	        info: true,
	        lengthChange: true,
	        language: {
	            paginate: {
	                next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
	                previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
	            }
	        }
	    });
        $(".deleteLink").click(function () {
            var id = $(this).attr("IdValue");
            $("#deleteBtn").attr("href", "/Fee/DeleteFeeDetail/" + id);
        });
    </script>
}

