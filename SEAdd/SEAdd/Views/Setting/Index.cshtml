@model SEAdd.Models.DomainModels.Setting
@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (TempData["SuccessMsg"] != null)
{
    <div class="container text-center">
        <div class="alert alert-primary alert-dismissible fade show">
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="me-2"><polyline points="9 11 12 14 22 4"></polyline><path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path></svg>
            <strong>Success!</strong> @TempData["SuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="btn-close"></button>
        </div>
    </div>
}
@using (Html.BeginForm("EditApplicantApplySetting", "Setting", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id)
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6">
                <h3>Settings</h3>
            </div>
            <div class="col-sm-6">
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        <div class="row mb-2">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.applicantDeptApply)
                    @Html.TextBoxFor(m => m.applicantDeptApply, new { @class = "form-control", placeholder = "Enter Number (0)" , type="number" })
                    @Html.ValidationMessageFor(m => m.applicantDeptApply, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">

                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-12 ">
                <div class="form-group float-end">
                    <input type="submit" value="Save Changes" name="save" class="btn btn-sm btn-success" />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
}


