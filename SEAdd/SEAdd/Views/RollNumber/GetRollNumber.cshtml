@model List<SEAdd.Models.ViewModels.ApplicantRollNumberVM>
@{
    ViewBag.Title = "GetRollNumber";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <h3><strong>Note !</strong></h3>
    <h4 class="text-danger">Get your Roll Number in order to participate in the entry test which is mandatory for the admission in some departments. If your roll number coloumn is empty then it may be 
    due to the entry test is not required for admission or entry test date is not defined and roll number are not given to the applicants. If your application for the admission is rejected then you can't
    participate in the entry test.
    </h4>
</div>


<div class="col-md=12 mt-4 mx-4">
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Applicant Roll Numbers</h4>
            @*<a href="#" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Add New</a>*@
        </div>
        <div class="clearfix"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example5" class="table table-responsive-md">
                    <thead>
                        <tr>
                            <th><strong>Form Number</strong></th>
                            <th><strong>Full Name</strong></th>
                            <th><strong>Father's Name</strong></th>
                            <th><strong>Email</strong></th>
                            <th><strong>CNIC</strong></th>
                            <th><strong>Department</strong></th>
                            <th><strong>Program</strong></th>
                            <th class="bg-success text-white"><strong>Roll Number</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.programDetail.id</td>
                                    <td>@item.applicant.FullName</td>
                                    <td>@item.applicant.FatherName</td>
                                    <td>@item.applicant.Email</td>
                                    <td>@item.applicant.CNIC</td>
                                    <td>@item.programDetail.Department.name</td>
                                    <td>@item.programDetail.Program.ProgramName</td>
                                    @if (item.applicantRollNumber != null)
                                    {
                                        <td><strong>@item.applicantRollNumber.applicantRollNumber</strong></td>
                                    }
                                    else
                                    {
                                        <td>Pending</td>
                                    }
                                </tr>
                            }                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


